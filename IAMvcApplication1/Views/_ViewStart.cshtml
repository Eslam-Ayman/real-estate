@{
 var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
  string cLayout = "";
 if (controller == "Boss") {
     cLayout = "~/Views/Shared/_AdminPmTlLayout.cshtml";
 }
 else if (controller == "JeCustomer") {
     cLayout = "~/Views/Shared/_JeCustomerLayout.cshtml";
 }
 else {
 cLayout = "~/Views/Shared/_Layout.cshtml";
 }
 Layout = cLayout;
}

